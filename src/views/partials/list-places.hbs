<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>lat</th>
      <th>lng</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each category.places}}
      <tr>
        <td>
          {{name}}
        </td>
        <td class="is-selected">
          {{description}}
        </td>
        <td>
          {{lat}}
        </td>
        <td>
          {{lng}}
        </td>
        <td>
          <a href="/place/{{../category._id}}/editplace/{{_id}}" class="ui icon button">
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/category/{{../category._id}}/deleteplace/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
