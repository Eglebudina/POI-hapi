{{> menu}}

<form class="box"  action="/place/{{category._id}}/updateplace/{{place._id}}" method="POST">
  <label>Update Place Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="name", value="{{place.name}}">
      </div>
      <div class="field">
        <input class="input" type="text" name="description" value="{{place.description}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="lat" value="{{place.lat}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="lng" value="{{place.lng}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Place</button>
</form>

